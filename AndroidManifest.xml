<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.vlille.checker"
    android:versionCode="3"
    android:versionName="2.0"
    android:installLocation="auto">

    <!-- Supports >= android 2.1 -->
    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="16"/>

    <application
        android:name=".VlilleChecker"
		android:label="@string/app_name"
        android:icon="@drawable/logo"
        android:theme="@style/MainTheme"
        >

        <!-- ACRA Activity -->
		<activity android:name="org.acra.CrashReportDialog"
	        android:theme="@android:style/Theme.Dialog"
	        android:launchMode="singleInstance"
	        android:excludeFromRecents="true"
	        android:finishOnTaskLaunch="true" />        
        
        <!-- Home Activity -->
        <activity
            android:name=".activity.HomeActivity" android:theme="@style/MainTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
		<!-- Home Preferences Activity -->
        <activity
            android:name=".activity.HomePreferenceActivity"
            android:label="@string/app_name"
    		android:theme="@style/MainTheme" />
        
		<!-- Maps Activity -->
         <activity
           	android:name=".activity.MapsActivity"
           	android:label="@string/app_name"
    		android:theme="@style/MainTheme">
		</activity>
		
		<!-- Location Maps Activity -->
         <activity
           	android:name=".activity.LocationMapsActivity"
           	android:label="@string/app_name"
    		android:theme="@style/MainTheme">
		</activity>
		
		<!-- Localisation Maps Preferences Activity -->
        <activity
            android:name=".activity.LocationMapsPreferenceActivity"
            android:label="@string/app_name"
    		android:theme="@style/MainTheme" />         
		
		<!-- About Activity -->
         <activity
           	android:name=".activity.AboutActivity"
           	android:label="@string/app_name"
    		android:theme="@style/MainTheme">
		</activity>
        
	        <service android:name=".service.StationsRetrieverService"/>
        
        <!-- Google Maps library -->
        <uses-library android:name="com.google.android.maps" />
    </application>
    
    <!-- Permissions -->
	<uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />    
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

</manifest>