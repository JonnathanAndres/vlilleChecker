<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/balloon_overlay_bg_selector"
                android:orientation="horizontal">

    <CheckBox
            android:id="@+id/maps_bubble_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/starStyle"
            android:layout_centerHorizontal="true"
            android:checked="true"/>

    <TextView
            android:id="@+id/maps_bubble_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/maps_bubble_checkbox"
            android:layout_centerInParent="true"
            android:text="Eura Technologies"
            android:textColor="@color/white"
            />

    <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
                 android:layout_width="120dp"
                 android:layout_height="wrap_content"
                 android:id="@+id/maps_bubble_station_table"
                 android:stretchColumns="4"
                 android:layout_below="@id/maps_bubble_title"
    >

        <TableRow
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:gravity="center">

            <TextView
                    android:id="@+id/maps_bubble_station_bikes"
                    android:layout_width="0dip"
                    android:layout_weight="0.30"
                    android:textColor="@color/white"
                    android:text="10"
                    android:gravity="center"/>

            <TextView
                    android:layout_width="0dip"
                    android:layout_height="fill_parent"
                    android:layout_weight="0.20"
                    android:textColor="@color/white"
                    android:text="V"
                    android:gravity="left"/>

            <TextView
                    android:id="@+id/maps_bubble_station_attachs"
                    android:layout_width="0dip"
                    android:layout_height="fill_parent"
                    android:layout_weight="0.30"
                    android:textColor="@color/white"
                    android:text="10"
                    android:gravity="center"/>

            <TextView
                    android:layout_width="0dip"
                    android:layout_height="fill_parent"
                    android:layout_weight="0.20"
                    android:textColor="@color/white"
                    android:text="P"
                    android:gravity="left"/>
        </TableRow>
    </TableLayout>

</RelativeLayout>