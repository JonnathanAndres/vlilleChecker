<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
		xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:app="http://schemas.android.com/apk/res/com.vlille.checker"
   	android:layout_width="wrap_content"
   	android:layout_height="wrap_content"
	android:orientation="vertical"
	android:background="@color/white">
	
<!-- 	<com.markupartist.android.widget.ActionBar -->
<!-- 	    android:id="@+id/actionbar" -->
<!-- 	    app:title="@string/app_name_title" -->
<!-- 	    style="@style/ActionBar" -->
<!--     /> -->
	
	<RelativeLayout
	   	android:layout_width="wrap_content"
	   	android:layout_height="wrap_content"	 
	   	android:padding="5dip">
		<TextView
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:id="@+id/about_text"
		    android:text="@string/about_text"
		    />
		<TextView
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:id="@+id/about_text_email"
		    android:text="@string/about_text_email"
		   	android:layout_below="@id/about_text"
		    android:autoLink="email"
		    />
		<TextView
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:id="@+id/about_text_web"
		    android:text="@string/about_text_web"
		   	android:layout_below="@id/about_text_email"
		    android:autoLink="web"
		    />
	</RelativeLayout>   
</LinearLayout>
